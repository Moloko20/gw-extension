{
  "root": true,

  "env": {
      "browser": true,
      "es2021": true
  },

  "extends": [
      "@foxglove/base",
      "@foxglove/react",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "prettier"
  ],
  // Здесь мы подключаем используемые плагины.
  "plugins": [
      "@foxglove/base",
      "@foxglove/react",
      "react",
      "jest",
      "prettier"
  ],
  /* Правила для отслеживания линтером. Если пресеты покрывают не все ситуации, 
  вы можете прописать нужные правила вручную. */
  "rules": {
      "prettier/prettier": "error", // Обязательно!! Подсвечивает ошибки из Prettier.
      "react/prop-types": 1 // Отключаем правило проверки передаваемых типов.
  },

  "ignorePatterns": "dist",

  // "overrides": [
  //   {}
  //   "files": ["*.ts", "*.tsx"],
  //   "extends": {
  //     "plugin": "@foxglove/typescript"
  //   },
  //   "parserOptions": {
  //     "project": "./tsconfig.json"
  //   }
  //     }
  // ]
}