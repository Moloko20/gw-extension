{
    "extends": "@foxglove/fox/tsconfig/tsconfig.json",

    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["DOM", "DOM.Iterable", "ESNext", "ScriptHost"],

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false, //temporarily disabled due to config.ts
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "isolatedModules": false,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": "./",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,

        "paths": {
            "App": ["src/App"],
            "components/*": ["src/components/*"],
            "shared/*": ["src/shared/*"],
            "services/*": ["src/services/*"],
            "types/*": ["src/types/*"]
        },

        "jsx": "react",
        "target": "ESNext",
    },

    "include": ["src/**/*.ts", "src/**/*.tsx", "config.ts"],
    "exclude": ["node_modules", "dist", "src/**/*.stories.tsx", "src/components/Map/MapPanel.tsx"]
}